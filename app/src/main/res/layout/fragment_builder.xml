        <RelativeLayout
            android:id="@+id/rlProcessor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">


            <ImageView
                android:id="@+id/ivStatusProcessor"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/alert_small" />

            <ImageView

                android:id="@+id/bSelectProcessor"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/processor"
                android:text="SELECT"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/bSelectProcessor"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/bSelectProcessor"
                android:layout_toRightOf="@+id/bSelectProcessor"
                android:fontFamily="sans-serif-condensed"
                android:text="Processor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/background_floating_material_dark"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/tvProcessorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:text="Touch to select." />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

